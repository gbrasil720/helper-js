{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "outDir": "./dist",                               
    "module": "commonjs",                             
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "skipLibCheck": true   ,
    "paths": {
      "@/*": ["./src/*"],
      "@package-node/*": ["./src/packages/node/*"],
      "@package-react/*": ["./src/packages/react/*"],
      "@types-node/*": ["./src/types/node/*"],
      "@types-react/*": ["./src/types/react/*"],
      "@tests-manual": ["./src/tests/manual/*"] 
    }                           
  }
}
